<%= javascript_tag do %>
  window.color = '<%= j @color %>';
  window.old_color = '<%= j @old_color %>';
  window.converting = '<%= j @converting %>';
<% end %>

<div class="pixel">
    <%= link_to "logout", {:controller=> "sessions", :action=> "destroy"}, :method => :delete%>
    <div class="bandana"></div>
    <div class="cta">
        <button class="btn-cta">SPREAD PIXEL</button>
    </div>
    <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
      <div class="flipper">
        <div class="front">
            &nbsp;
        </div>
        <div class="back">
            <img src="<%= @qr_code %>">
        </div>
      </div>
    </div>
</div>
<audio class="wololo">
  <source src="<%= audio_path('wololo.mp3') %>" type="audio/mp3">
</audio>

